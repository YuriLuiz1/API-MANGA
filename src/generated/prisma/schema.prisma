generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = "mysql://root:admin@localhost:3306/prisma_shadow"
}

model Mangas {
  id      Int    @id @default(autoincrement())
  titulo  String
  autor   String
  genero  String
  preco   Int    @default(0)
  paginas Int    @default(0)
  sinopse String @default("")
}
